<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wiser.dottracker.com.example.wiser.ILOSDataCollection.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/seal"/>

    <Button
        android:id="@+id/wifiBtn"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:onClick="goToWifiInfo"
        android:text="Collect Location Data" />

    <Button
        android:id="@+id/calibrateBtn"
        android:layout_width="208dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="175dp"
        android:onClick="goToStepCalibration"
        android:text="Calibrate Step Length"
        android:visibility="visible" />

    <Button
        android:id="@+id/openCVCamBtn"
        android:layout_width="205dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:onClick="goToOpenCVCam"
        android:text="Go To OpenCV Camera" />

    <Button
        android:id="@+id/singlePointBtn"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp"
        android:onClick="goToSinglePoint"
        android:text="Collect Single Point Data" />

</RelativeLayout>